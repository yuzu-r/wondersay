

<div class="jumbotron">
  <h2> 
    <span>
      <% if @quote %>
        Precept # <%= @quote.id %>
      <% else %>
        Precept # 0
      <% end %>
    </span>
  </h2>
  <% if @quote %>
    <h1 id='precept-quote' class="precept"> <%= @quote.quote %> </h1>
    <h2 class="pull-right precept-author"> -- <%= @quote.author %> </h2>
  <% else %>
    <h1 class="precept">There are no quotes in the database. Create some!</h1>
  <% end %>
    <br class="clear" />
  <br />
  <br />
  <a href="https://twitter.com/share" data-size="large" data-text="<%= @tweet_text%>" data-url="http://wondersays.herokuapp.com" data-hashtags="choosekind" data-show-count="false" class="twitter-share-button">
  </a><script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
</div>  
<div class="container">
  <div class="text-center">
    <a href=<%= root_path %> class='btn btn-default' role="button" id='next-quote'><i class="fa fa-refresh fa-2x" style="vertical-align: middle;"></i>&nbsp;Show Another!</a>
  </div>
</div>
<br class="clear" />
<br />
<div class="footer-blurb">
  more info 
</div>     

<script>
  $(document).ready(function(){
    $.ajax({
      url: 'api/v1/precepts/random.json',
      //url: 'http://wondersays.herokuapp.com/api/v1/precepts/random.json',
      type: 'GET',
      dataType: 'jsonp',
      jsonp: 'callback',
      jsonpCallback: 'jsonpCallback',
      success: function(){
      }, 
      error: function (data) {
        console.log('Failed to get quote!');
      }
    });
  });
  function jsonpCallback(data){
    console.log(data.quote);
  }
</script>

