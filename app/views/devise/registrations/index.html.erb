<div class="col-sm-offset-3 col-sm-6">
  <h2>User Admin</h2><br/>
</div>
<div class="clear">

<div class="table-responsive">
  <table class="table">
    <% @users.each do |u| %>
      <tr>
        <td class="col-sm-8"><%=u.email %></td>
        <% if u.approved %>
          <td class="col-sm-2"><%= link_to "revoke admin access", get_user_access_path(u) %></td>
        <% else %>
          <td class="col-sm-2"><%= link_to "grant admin access", get_user_access_path(u) %></td>
        <% end %>
        <td class="col-sm-2"><%= link_to "remove account", '#' %></td>
      </tr>
    <% end %>
  </table>
</div>


